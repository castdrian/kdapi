{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"types": [
			"bun-types"
		],
		"allowJs": true,
		"strict": true,
		"noEmit": true,
		"allowImportingTsExtensions": true,
		"skipLibCheck": true,
		"noUncheckedIndexedAccess": true,
		"baseUrl": ".",
		"paths": {
			"@root/*": [
				"./*"
			],
			"@src/*": [
				"./src/*"
			]
		},
		"outDir": "dist",
		"rootDir": ".",
		"declaration": true,
		"emitDeclarationOnly": true
	},
	"include": [
		"src/**/*",
		"test/**/*"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}